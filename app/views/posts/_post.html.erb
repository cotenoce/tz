<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= link_to post.title, category_post_path(@category, post) %></strong></p>
    <p class="comment_time"><%= time_ago_in_words(post.created_at) %> Ago</p>
  </div>
  <p><%= link_to 'Delete', [@category, post],
                  method: :delete,
                  class: "button",
                  data: { confirm: 'Are you sure?' } %></p>
</div>
