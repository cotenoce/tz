<%= form_for [@category, @post], html: {id: 'post_form', class: 'data-parsley-validate'} do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :title %><br>
	<%= f.text_field :title, 'data-parsley-required' => 'true', "data-parsley-pattern" => "^[A-Z][a-z]+\s[a-z]{2,}.*\\.$" %><br>
	<br>
	<%= f.label :body %><br>
	<%= f.text_area :body %><br>
	<p></p>
	<% if @post.file.present? %>
		<span>Uploaded file: <%= @post.file_name%></span>
	<% end %>
	<p></p>
	<%= f.label :file %>
  <%= f.file_field :file %>
  <p></p>
	<%= f.submit %>
<% end %>
